<header class="gh-header gh-canvas grid grid-cols-canvas pb-[4vmin]">
    <h1 class="gh-title text-2xl sm:text-3xl md:text-4xl text-center">{{title}}</h1>

    {{#if custom_excerpt}}
        <p class="gh-excerpt !text-base md:!text-lg mt-[3vmin] text-center tracking-tight border-b pb-[3vmin] md:!leading-tight">{{custom_excerpt}}</p>
    {{/if}}

    {{#if feature_image}}
        <figure class="gh-feature-image !col-[wide-start/wide-end] w-full mt-[8vmin]">
            <img class="w-full" src="{{feature_image}}" alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}" />
            {{#if feature_image_caption}}
                <figcaption>{{feature_image_caption}}</figcaption>
            {{/if}}
        </figure>
    {{/if}}
</header>